<!-- Modal -->

<div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { id = "login-form", style = "display:block" }))
    {


        @*<form action="Create" method="post">*@
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Register as User</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">


                        <div class="form-group row">
                            <div class="col-sm-4">
                                &nbsp;
                            </div>
                            <div class="col-sm-8" style="text-align:center">

                                <span style="text-align:center;font-weight:bold">Image Preview</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                &nbsp;
                            </div>
                            <div class="col-sm-8">

                                <div style="margin:auto; width:100px"><img height="100" class="rounded-circle" src="@Url.Content("~/Images/sample.png")" alt="Profile pic" /></div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                &nbsp;
                            </div>
                            <div class="col-sm-8" style="text-align:center">

                                <span style="text-align:center;font-weight:bold">Your Profile Pic</span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-4">
                                &nbsp;
                            </div>
                            <div class="col-sm-8">
                                <input type="file" class="form-control" id="">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="username" class="col-sm-4 col-form-label">Username:</label>
                            <div class="col-sm-8">
                                <!--<input type="text" class="form-control" name="username">-->
                                @Html.TextBoxFor(m => m.username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="email" class="col-sm-4 col-form-label">Email Address:</label>
                            <div class="col-sm-8">
                                @*<input type="email" class="form-control" name="email">*@
                                @Html.TextBoxFor(m => m.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="col-sm-4 col-form-label">Password:</label>
                            <div class="col-sm-8">
                                @*<input type="password" class="form-control" name="password">*@
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "password", placeholder = "Enter Password", tabindex = "2" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="confirmpassword" class="col-sm-4 col-form-label">Confirm Password:</label>
                            <div class="col-sm-8">
                                @*<input type="password" class="form-control" name="ConfirmPassword">*@
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "password", placeholder = "Enter Password", tabindex = "2" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>




                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primary" value="Sign up">
                    </div>

                </div>
            </div>
        @*</form>*@
    }
</div>

