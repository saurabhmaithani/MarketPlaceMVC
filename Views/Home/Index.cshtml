@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_site.cshtml";
    
}
@model MarketPlaceMVC.Models.tblUser

<div class="body-content btn-sign-up pull-right" id="holder-sign-up"><span id="btn-signup">Sign Up</span></div>
<div>
    @using (Html.BeginForm("Verify", "Home", FormMethod.Post, new { id = "login-form", style = "display:block" }))
    {
        @Html.AntiForgeryToken()
        <div class="input-group">
            @Html.TextBoxFor(m => m.username, new { @class = "form-control", id = "UserName", placeholder = "Enter User Name", tabindex = "1" })
            @Html.ValidationMessageFor(m => m.username)
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
        </div>


        <div class="input-group" style="margin-top:10px">

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "password", placeholder = "Enter Password", tabindex = "2" })
            @Html.ValidationMessageFor(m => m.Password)
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
        </div>




        <div class="" style="margin-top:10px">
            <input type="submit" name="command" id="login-submit" tabindex="4" class="btn btn-primary pull-right" value="Login">
        </div>
    }

